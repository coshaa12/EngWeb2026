extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Exame Medico
    
    .w3-container
      table.w3-table-all.w3-margin-top
        tr
          th Nome
          th Data
          th Modalidade
          th Resultado
          th Ações
        each e in list
          tr
            td= e.nome.primeiro + ' ' + e.nome.último
            td= e.dataEMD
            td= e.modalidade
            td= e.resultado ? 'Apto' : 'Não Apto'
            td
              a.w3-btn.w3-round.w3-blue-grey.w3-small(href=`/emd/${e._id}`) Ver Mais