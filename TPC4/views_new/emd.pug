extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Detalhes do EMD: #{emd.nome.primeiro} #{emd.nome.último}
    
    .w3-container.w3-margin-top
      ul.w3-ul.w3-card-4
        li #[b Nome:] #{emd.nome.primeiro} #{emd.nome.último}
        li #[b Idade:] #{emd.idade}
        li #[b Género:] #{emd.género}
        li #[b Morada:] #{emd.morada}
        li #[b Clube:] #{emd.clube}
        li #[b Email:] #{emd.email}
        li #[b Federado:] #{emd.federado ? 'Sim' : 'Não'}
        li #[b Modalidade:] #{emd.modalidade}
        li #[b Data do Exame:] #{emd.dataEMD}
        li #[b Resultado:] #{emd.resultado ? 'Apto' : 'Não Apto'}
    
    footer.w3-container.w3-teal.w3-margin-top
      a.w3-btn.w3-round.w3-grey.w3-margin-bottom.w3-margin-top(href="/") Voltar