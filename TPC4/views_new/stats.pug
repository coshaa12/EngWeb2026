extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Estat√≠sticas dos Exames (Ordenadas por Quantidade)
    
    .w3-container.w3-padding-16
      each val, key in stats
        h3.w3-border-bottom.w3-border-teal= key.toUpperCase()
        table.w3-table-all.w3-margin-bottom
          tr
            th Categoria
            th Quantidade
          each pair in val
            tr
              td= pair[0]
              td= pair[1]
    
    footer.w3-container.w3-teal
      a.w3-btn.w3-round.w3-grey.w3-margin-bottom.w3-margin-top(href="/") Voltar